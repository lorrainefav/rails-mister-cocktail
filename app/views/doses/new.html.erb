<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <% if @cocktail.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @cocktail.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :description %>
    <%= f.association :ingredient, prompt: "Choose an ingredient" %>
    <%= f.button :submit %>
  <% end %>
  <%= link_to "Return to List", cocktail_path(@cocktail), class:"btn btn-primary" %>
</div>



