
<div>
  <h1> <%= @cocktail.name %></h1>
</div>

<div class="container">
  <h2>Description</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> - <%= dose.ingredient.name %>
       <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>

</div>


<div>
  <%= link_to "Return to List", root_path, class:"btn btn-primary" %>
  <%= link_to "Add description", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
</div>




